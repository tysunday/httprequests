<Window x:Class="httprequests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:httprequests"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Search Text:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="SearchTextBox" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="200" Margin="80,10,0,0"/>
        <Button Content="Search" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="290,10,0,0" Click="SearchButton_Click"/>
        <TextBlock Name="StatusTextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <ListBox Name="ResultsListBox" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="490" Margin="10,80,0,0"/>
    </Grid>
</Window>